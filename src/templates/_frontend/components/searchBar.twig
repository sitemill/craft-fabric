{# TODO: option to turn live search ON - maybe not on by default? #}
<form
    action="{{ url('listing/all') }}"
    method="GET"
    class="search-bar | relative"
>
    <div class="search-bar__icon | absolute flex items-center h-full left-2.5">
        <i class="fas fa-search opacity-50"></i>
    </div>

    <input
        class="search-bar__input | w-full border-0 bg-gray-600 bg-opacity-20 py-2 pr-2 pl-8 rounded placeholder-gray-600 placeholder-opacity-90"
        type="text"
        name="q"
        placeholder="Search"
        data-hx-select=".main"
        data-hx-get="{{ url('listing/all') }}"
        data-hx-indicator="#page-loader"
        data-hx-target=".main"
        data-hx-swap="outerHTML"
        data-hx-push-url="true"
        hx-trigger="keyup delay:250ms"
        value = "{{ craft.app.request.getParam('q') }}"
    >
</form>
