{% set item = item %}
{% set elementType = elementType %}
{% set id = item.id %}
{% set title = item.title %}
{% set route =  elementType == 'asset' ? 'asset' : item.section.handle|kebab ~ '/entry' %}
{% set kind = elementType == 'asset' ? item.kind : 'entry' %}
{% set editUrl = currentUser and currentUser.admin ? item.cpEditUrl : 0 %}
{% set thumbnail = thumbnail is defined ? thumbnail : 0 %}

<article x-data="{ hover{{ id }}: false }"
         @mouseenter="{hover{{ id }} = true}"
         @mouseleave="{hover{{ id }} = false}"
         class="card-grid | relative text-center w-52 hover:bg-gray-200">

    <div class="card-grid__wrapper | p-4">

        <div class="card-grid__thumbnail">
            {% include ['_fabric/components/thumbnail/' ~ kind,'_fabric/components/thumbnail'] with {
                alt: title,
                thumbnail: thumbnail
            } only %}
        </div>

        <header class="card-grid__header">
            <h3 class="card-grid__title | font-medium m-0">
                <a href="{{ url(route ~ '/' ~ id ~ '/' ~ title|kebab ) }}"
                   class="card-grid__action no-underline text-gray-900">
                    {{ title }}
                    <div class="absolute top-0 bottom-0 w-full"></div>
                </a>
            </h3>
        </header>

        <div
                class="card-grid__actions || z-10 hover:block p-4 absolute top-0 right-0"
                x-show="hover{{ id }}" x-cloak>
            {% include ['_fabric/components/quickActions/' ~ kind,'_fabric/components/quickActions'] with {
                id: id,
                title: title,
                elementType: elementType,
                context: 'card',
                element: item,
                editUrl: editUrl,
                kind: kind
            } only %}
        </div>

    </div>
</article>