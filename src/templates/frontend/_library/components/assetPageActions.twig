{% embed '_library/components/pageActions'%}
    {% block actions %}
        {% include 'action_old.twig' with {
            label: 'Edit',
            title: 'Edit this asset in the control panel',
            url: asset.cpEditUrl,
            adminOnly: true,
            icon: 'edit',
            target: '_blank'
        }%}
        {% include 'action_old.twig' with {
            label: 'Add to lightbox',
            title: 'Add this asset to a lightbox',
            url: '#',
            icon: 'plus-square'
        }%}
        {% include 'action_old.twig' with {
            label: 'Download',
            title: 'Download this asset',
            url: asset.url,
            icon: 'download',
            download: true
        }%}
    {% endblock %}
{% endembed %}